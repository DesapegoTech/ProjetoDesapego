<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script>
        function salvar() {
            var json = {};
            json.nome = document.getElementById("nome").value;
            json.sobreNome = document.getElementById("sobreNome").value;
            json.cpf = document.getElementById("cpf").value;
            json.email = document.getElementById("email").value;
            json.senha = document.getElementById("senha").value;

            $.ajax({
                url: "/funcionario/inserir/",
                data: json,
                type: "get",
                success: function (resp) {
                    alert(resp);
                },
                error: function () {
                    alert("Algo deu errado!");
                }
            });
        }
    </script>
    <style>
        body {
            color: white;
            background: linear-gradient(to right, #6a11cb, #2575fc);
        }

        .titulo {
            text-align: center;
        }

        .paragrafo {
            color: white;
        }
    </style>
</head>

<body>
    <h2 class="titulo">Tela De Cadastra</h2>
    <div class="container text-left">
        <div class="row align-items-center">
            <div class="col">
            </div>
            <div class="col-8">
                <div class="mb-3">
                    <div class="row g-3">
                        <div class="col">
                            <label for="nome" class="form-label">Nome:</label>
                            <input type="text" class="form-control" id="nome" placeholder="ex Junin" aria-label="First name">
                        </div>
                        <div class="col">
                            <label for="sobreNome" class="form-label">Sobre Nome:</label>
                            <input type="text" class="form-control" id="sobreNome" placeholder="Ex Santos" aria-label="Last name">
                        </div>
                    </div>

                    <label for="cpf" class="form-label">CPF:</label>
                    <input type="text" class="form-control" id="cpf" placeholder="758 **">


                    <label for="email" class="form-label">Email:</label>
                    <input type="text" class="form-control" id="email" placeholder="name@example.com">

                    <label for="senha" class="form-label">Senha:</label>
                    <input type="password" id="senha" class="form-control" aria-describedby="passwordHelpBlock">
                    <div id="passwordHelpBlock" class="form-text">
                        <p class="paragrafo">Sua senha deve ter de 8 a 20 caracteres, conter letras e números e não deve conter espaços, caracteres especiais ou emojis.</p>
                    </div>
                    <br />

                    <button type="button" class="btn btn-outline-light" value="Salvar" onclick="salvar()">Salvar</button>
                </div>
            </div>
            <div class="col">
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
